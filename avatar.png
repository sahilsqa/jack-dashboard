<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 400" width="400" height="400">
  <defs>
    <linearGradient id="bgGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FDF8F3;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#F5F0E8;stop-opacity:1" />
    </linearGradient>
    <filter id="softShadow" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur in="SourceAlpha" stdDeviation="3"/>
      <feOffset dx="0" dy="2" result="offsetblur"/>
      <feComponentTransfer>
        <feFuncA type="linear" slope="0.1"/>
      </feComponentTransfer>
      <feMerge>
        <feMergeNode/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="400" fill="url(#bgGrad)"/>
  
  <!-- Decorative circles -->
  <circle cx="320" cy="80" r="60" fill="#8B9A7D" opacity="0.15"/>
  <circle cx="60" cy="340" r="80" fill="#C9A689" opacity="0.12"/>
  
  <!-- Face circle -->
  <circle cx="200" cy="200" r="120" fill="#FFFFFF" filter="url(#softShadow)"/>
  <circle cx="200" cy="200" r="120" fill="none" stroke="#E8E3DB" stroke-width="2"/>
  <circle cx="200" cy="200" r="120" fill="#8B9A7D" opacity="0.08"/>
  
  <!-- Eyes -->
  <ellipse cx="165" cy="185" rx="18" ry="22" fill="#2D2A26"/>
  <ellipse cx="235" cy="185" rx="18" ry="22" fill="#2D2A26"/>
  
  <!-- Eye highlights -->
  <circle cx="170" cy="180" r="5" fill="#FFFFFF"/>
  <circle cx="240" cy="180" r="5" fill="#FFFFFF"/>
  
  <!-- Smile -->
  <path d="M 165 225 Q 200 255 235 225" fill="none" stroke="#8B9A7D" stroke-width="4" stroke-linecap="round"/>
  
  <!-- Blush/cheeks -->
  <circle cx="145" cy="215" r="20" fill="#D4A5A5" opacity="0.25"/>
  <circle cx="255" cy="215" r="20" fill="#D4A5A5" opacity="0.25"/>
  
  <!-- Text -->
  <text x="200" y="360" font-family="Inter, -apple-system, sans-serif" font-size="28" font-weight="600" fill="#2D2A26" text-anchor="middle">Jack</text>
  <text x="200" y="385" font-family="Inter, -apple-system, sans-serif" font-size="14" fill="#9A9590" text-anchor="middle">AI Assistant for Sahil</text>
  
  <!-- Border -->
  <rect x="8" y="8" width="384" height="384" fill="none" stroke="#8B9A7D" stroke-width="3" opacity="0.2" rx="12"/>
</svg>